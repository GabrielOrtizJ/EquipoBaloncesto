<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoequipo"
    tools:context=".activity.MainActivityAltaEquipo">

    <EditText
        android:id="@+id/tvNombre"
        android:layout_width="205dp"
        android:layout_height="64dp"
        android:layout_marginBottom="26dp"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:ems="10"
        android:hint="Nombre Equipo"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tvCiudad"
        app:layout_constraintEnd_toEndOf="@+id/tvNombrePabellon"
        app:layout_constraintStart_toStartOf="@+id/tvNombrePabellon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="122dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="81dp"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:gravity="center"
        android:text=" Alta de Equipo"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tvCiudad"
        android:layout_width="205dp"
        android:layout_height="64dp"
        android:layout_marginBottom="20dp"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:ems="10"
        android:hint="Ciudad"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textViewAlta"
        app:layout_constraintEnd_toEndOf="@+id/tvNombre"
        app:layout_constraintStart_toStartOf="@+id/tvNombre" />

    <EditText
        android:id="@+id/tvNombrePabellon"
        android:layout_width="205dp"
        android:layout_height="64dp"
        android:layout_marginTop="53dp"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:ems="10"
        android:hint="Nombre pabellon"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textViewAlta"
        android:layout_width="162dp"
        android:layout_height="71dp"
        android:layout_marginBottom="128dp"
        android:background="@drawable/bt_entrar"
        android:gravity="center"
        android:text="Crear Equipo"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvCiudad"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/tvCiudad" />

    <TextView
        android:id="@+id/textViewVolver2"
        android:layout_width="70dp"
        android:layout_height="56dp"
        android:layout_marginStart="299dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="38dp"
        android:background="@android:drawable/ic_menu_revert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>