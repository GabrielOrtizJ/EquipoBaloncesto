<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tableroazul"
    android:orientation="vertical"
    tools:context=".activity.MainActivityOption">

    <TextView
        android:id="@+id/tvVolver"
        android:layout_width="70dp"
        android:layout_height="56dp"
        android:layout_marginStart="295dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="46dp"
        android:background="@android:drawable/ic_menu_revert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMostrarJugadores" />

    <TextView
        android:id="@+id/tvMostrarJugadores"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="37dp"
        android:background="@android:drawable/divider_horizontal_textfield"
        android:gravity="center"
        android:text="Mostrar Jugadores"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAñadirJ" />

    <TextView
        android:id="@+id/tvAñadirJ"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="37dp"
        android:background="@android:drawable/divider_horizontal_textfield"
        android:gravity="center"
        android:text="Añadir Jugador"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAltaEquipo" />

    <TextView
        android:id="@+id/tvAltaEquipo"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="37dp"
        android:background="@android:drawable/divider_horizontal_textfield"
        android:gravity="center"
        android:text="Alta Equipo"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>